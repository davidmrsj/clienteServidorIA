<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Text Styles with direct Manrope font names -->
    <style name="Text">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Text.Manrope">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Manrope.HeadlineLarge">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Manrope.HeadlineMedium">
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Manrope.TitleRegular">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Manrope.BodyMedium">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Manrope.BodySmall">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Manrope.Caption">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorContainer">@color/blue</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!--    Button-->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/Text.Manrope.HeadlineMedium</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_marginStart">@dimen/size16dp</item>
        <item name="android:layout_marginEnd">@dimen/size16dp</item>
    </style>
</resources>
